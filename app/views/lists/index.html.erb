<%= render 'navbar' %>
<%= render 'banner' %>
<div class="container">
  <div class="d-flex">
    <div class="row card-row">
    <div class="d-flex justify-content-between">
      <h3>My lists</h3>
      <%= link_to 'Create a movie list', new_list_path, class: 'btn-green' %>
      </div>
      <% @lists.each do |list| %>
        <div class="col-12 col-md-6 col-lg-4 m-4 list-card">
          <%= link_to list.name, list_path(list), class: 'list-name' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
