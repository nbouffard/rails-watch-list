<%= render 'navbar' %>
<div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <h1><%= @list.name %></h1>
</div>
<div class="container">
<div class="show">
<%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn-green' %>
</div>
  <div class="row mb-4">
    <% @list.bookmarks.each do |m| %>
      <div class="col mb-4 card-padding">
        <div class="card card-height" style="width: 18rem;">
          <%= image_tag ("#{m.movie.poster_url}"), class: 'card-img-top' %>
          <div class="card-body d-flex flex-column justify-content-between ">
            <div class="card-content-text">
              <div class="d-flex">
                <h5 class='class-title'><strong><%= m.movie.title %></strong></h5>
                -
                <p class='card-text'><%= m.movie.rating %> ⭐️</p>
              </div>
              <p class='card-text'><%= m.movie.overview %></p>
              <p class='card-text'>"<%= m.comment %>"</p>
            </div>
            <%= link_to 'Remove bookmark', bookmark_path(m), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger mt-4' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Home', root_path %>
</div>
