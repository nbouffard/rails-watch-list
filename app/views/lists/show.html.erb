<div class="container">
  <h1><%= @list.name %></h1>
  <% @list.bookmarks.each do |m| %>
    <div class="movie-card border">
      <h2><%= m.movie.title %></h2>
      <p><%= m.movie.overview %></p>
      <p><%= m.movie.rating %></p>
      <p>"<%= m.comment %>"</p>
      <%= image_tag (m.movie.poster_url) %>
      <%= link_to 'Remove bookmark', bookmark_path(m), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </div>
  <% end %>
  <%= link_to '+Add bookmark', new_list_bookmark_path(@list) %>
  |
  <%= link_to 'Home', lists_path %>
</div>
