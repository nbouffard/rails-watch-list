<%= render 'navbar' %>
<div class="container">
  <h1><%= @list.name %></h1>
  <div class="row">
      <% @list.bookmarks.each do |m| %>
    <div class="col">
        <div class="card" style="width: 18rem;">
            <%= image_tag ("#{m.movie.poster_url}"), class: 'card-img-top' %>
            <div class="card-body">
              <div class="d-flex">
                <h5 class='class-title'><strong><%= m.movie.title %></strong></h5>
                -
                <p class='card-text'><%= m.movie.rating %> ⭐️</p>
              </div>
              <p class='card-text'><%= m.movie.overview %></p>
                <p class='card-text'><%= m.comment %></p>
              <%= link_to 'Remove bookmark', bookmark_path(m), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </div>
        </div>
    </div>
      <% end %>
  </div>
  <%= link_to '+Add bookmark', new_list_bookmark_path(@list) %>
  |
  <%= link_to 'Home', root_path %>
</div>
